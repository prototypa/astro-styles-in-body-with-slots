---
export interface Props {
  title: string;
  subtitle: string;
  content?: string;
}

const {
  title,
  subtitle = await Astro.slots.render("subtitle"),
  content = await Astro.slots.render("content"),
} = Astro.props;
---

<section class="bg-slate-50">
  <div class="mx-auto text-center max-w-3xl px-4 py-8 md:py-16">
    {title && <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter">{title}</h1>}
    {subtitle && <p class="mt-4 text-xl text-gray-500" set:html={subtitle} />}
    {content && <div class="mt-4" set:html={content} />}
  </div>
</section>
